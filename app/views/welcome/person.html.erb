<div class="w-full max-w-sm p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700">
  <%= form_with(model: @person, url: create_person_path, :html => {:class => 'space-y-6'}, method: :post) do |form| %>

    <h5 class="text-xl font-medium text-gray-900 dark:text-white">挑選你的個性</h5>

    <div class="flex mb-2 items-center pl-4 border border-gray-200 rounded dark:border-gray-700">
      <%= form.label :personality, "外向",class: "w-full py-4 ml-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
      <%= form.check_box :personality, {checked: @person.personality == "外向"}, class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
    </div>

    <div class="flex mb-2 items-center pl-4 border border-gray-200 rounded dark:border-gray-700">
      <%= form.label :personality, "内向", class: "w-full py-4 ml-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
      <%= form.check_box :personality, {checked: @person.personality == "内向"}, class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"  %>
    </div>

    <div class="mb-2">
      <%= form.submit "開始分析", class:"w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
    </div>
  <% end %>
</div>


